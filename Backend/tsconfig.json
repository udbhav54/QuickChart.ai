{
  "compilerOptions": {
    "target": "ES2022", // Output JS version
    "module": "NodeNext", // Module system for ES import/export
    "moduleResolution": "NodeNext", // Resolve modules like Node.js
    "outDir": "dist", // Compiled JS goes here
    "rootDir": "src", // Source TS files location
    "strict": true, // Enable all strict type-checking
    "esModuleInterop": true, // Allows default import from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Skip type checking of node_modules
    "resolveJsonModule": true, // Allow import of JSON files
    "noImplicitAny": true, // Prevent `any` type without declaration
    "noUnusedLocals": true, // Warn for unused variables
    "noUnusedParameters": true, // Warn for unused function parameters
    "sourceMap": true,
    "allowSyntheticDefaultImports": true

  },
  "include": ["src/**/*.ts", "src/index.ts"], // Include all TS files in src
  "exclude": ["node_modules", "dist"] // Exclude dependencies and build output
}
